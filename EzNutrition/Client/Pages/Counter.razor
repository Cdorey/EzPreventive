@page "/counter"
@using EzNutrition.Shared.Data.Entities;
@using EzNutrition.Shared.Utilities;
@inject HttpClient Http

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

@if (token == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p><em>@token</em></p>
}

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {

    private string? token;

    private async Task IncrementCount()
    {
        try
        {
            if (token == null)
            {
                var formContent = new FormUrlEncodedContent(new[] { new KeyValuePair<string, string>("username", "EpiMan"), new KeyValuePair<string, string>("password", "I_am_epiman") });
                var res = await Http.PostAsync("Auth", formContent);
                if (res.IsSuccessStatusCode)
                {
                    token = await res.Content.ReadAsStringAsync();
                }
                else
                {

                }
            }
            else
            {
                token = await Http.GetAuthorizedStringAsync(token, "Auth/Test");
            }
        }
        catch (Exception ex)
        {

        }

    }
}
