<div class="container" id="login-form">
    <h3>登录以开始</h3>

    <div class="row">
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label for="username">用户名</label>
                    <input type="text" class="form-control mb-2" id="username" placeholder="BBS测试账户EpiMan" @bind="username" />
                </div>
                <div class="form-group">
                    <label for="password">密码</label>
                    <input type="password" class="form-control mb-2" id="password" placeholder="BBS测试密码I_am_epiman" @bind="password" />
                </div>
                <button type="button" class="btn btn-primary mb-2" @onclick="Login">登录</button>
            </form>
        </div>
    </div>
</div>
<footer class="container mt-5">
    <p>备案信息或其他相关信息</p>
</footer>
@* <SurveyPrompt Title="How is Blazor working for you?" /> *@

@code {
    private string? username;
    private string? password;

    private async Task Login()
    {
        try
        {
            if (!(string.IsNullOrEmpty(username) || string.IsNullOrEmpty(password)))
            {
                var formContent = new FormUrlEncodedContent(new[] { new KeyValuePair<string, string>(nameof(username), username), new KeyValuePair<string, string>(nameof(password), password) });
                var res = await Http.PostAsync("Auth", formContent);
                if (res.IsSuccessStatusCode)
                {
                    var token = await res.Content.ReadAsStringAsync();
                    UserSession.UserInfo = new UserInfo(token);
                }
                else
                {

                }
            }
        }
        catch (Exception ex)
        {

        }
    }
}

